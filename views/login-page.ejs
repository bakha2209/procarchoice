<%- include("includes/header")%>
<link rel="stylesheet" typr="text/css" href="/css/login.css" />
<body>
  <form class="login_container" action="/resto/login" method="POST">
    <div class="login_frame">
      <div class="login_top">
        <span>Login</span>
        <div>
          Back to main page <a href="/resto" style="color: #6440fb">Home</a>
        </div>
        <p>
        Have not you registered yet
          <a href="/resto/sign-up" style="color: #6440fb">Register</a>
        </p>
      </div>

      <div class="login_input_frame">
        <div class="login_input_container">
          <label for="">Member nick:</label>
          <input
            type="text"
            name="mb_nick"
            placeholder="Member;s name"
            value=""
            required
          />
        </div>
        <div class="login_input_container">
          <label for="">Password:</label>
          <input
            type="password"
            name="mb_password"
            placeholder="Password"
            value=""
            required
          />
        </div>
      </div>

      <button class="login_btn btn" name="login" type="submit">Login</button>
    </div>
  </form> 
</body>

